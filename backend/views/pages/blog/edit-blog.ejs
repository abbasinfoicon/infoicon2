<%- include('../../partials/header', {title: "Blog Update"}) %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    
    <%- include('../../partials/breadcream', {title:"Update Blog",parent:"blog"}) %>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8">
            <form
              action="/edit-blog/<%= data.id %>"
              method="POST"
              enctype="multipart/form-data"
            >
            
              <!-- <input type="text"> -->
              <div class="card-body">
                <div class="form-group">
                  <label for="titleLabel">Title</label>
                  <input
                    type="text"
                    class="form-control"
                    id="titleLabel"
                    name="title"
                    placeholder="Enter title"
                    value="<%= data.title %>"
                  />
                </div>

                <div class="form-group">
                  <textarea id="summernote" name="desc"><%= data.desc %></textarea>
                </div>

                <div class="form-group">
                  <label for="exampleInputFile">Image Upload</label>
                  <div class="input-group">
                    <div class="custom-file">
                      <input
                        type="file"
                        class="custom-file-input"
                        id="exampleInputFile"
                        name="img"
                        accept="image/gif, image/jpeg, image/png"
                      />
                      <label class="custom-file-label" for="exampleInputFile"
                        >Choose Image</label
                      >
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Status</label>
                      <select class="form-control" name="status">
                        <% let status=['success','pending','reject']; %>
                            <% status.forEach( (item)=> { %>
                              <option value="<%= item %>" <% if(data.status==item ){ %> selected <% } %>><%= item %>
                              </option>
                              <% }) %>
                      </select>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="catLabel">Category</label>
                      <input
                        type="text"
                        class="form-control"
                        id="catLabel"
                        name="category"
                        placeholder="Enter Category"
                        value=<%= data.category %>
                      />
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>

          <div class="col-md-4">
            <div class="img-style">
                <% var imgName='/assets/upload/' + data.img %>
                <img alt="<%= data.title %>" class="img-fluid" src=<%= imgName %> />
            </div>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
</div>

<%- include('../../partials/footer') %>
<script>
  $(function () {
    // Summernote
    $("#summernote").summernote({
      height: 250,
    });
  });

  $(function () {
    bsCustomFileInput.init();
  });
</script>
