<%- include('../../partials/header', {title: "View Social"}) %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <% if(data){ %>
      <%- include('../../partials/breadcream', {title:"View Social",parent:"social"}) %>

    <!-- Main content -->
    <section class="content">
      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Social Detail</h3>

          <div class="card-tools">
            <button
              type="button"
              class="btn btn-tool"
              data-card-widget="collapse"
              title="Collapse"
            >
              <i class="fas fa-minus"></i>
            </button>
            <button
              type="button"
              class="btn btn-tool"
              data-card-widget="remove"
              title="Remove"
            >
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>

        <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-12 col-lg-6">
              <h3 class="text-primary">
                <i class="fas fa-paint-brush"></i> <%= data.name %>
              </h3>

              <div class="editor-dat"><a href="<%= data.link %>" target="_blank" class="btn btn-primary"><i class="fab fa-<%= data.icon %>"></i> <%= data.name %></a></div>

              <br />
              <br />

              <div class="text-muted">
                <p class="text-sm">
                  Link
                  <b class="d-block"
                    > <%= data.link %></b
                  >
                </p>
              </div>

              <div class="text-muted">
                <p class="text-sm">
                  Create Date
                  <b class="d-block"
                    ><%= (moment(data.createdAt).format("HH:mm - DD-MM-YYYY"))
                    %></b
                  >
                </p>
              </div>

              <div class="text-center mt-5 mb-3">
                <a href="/add-social" class="btn btn-sm btn-primary"
                  >Create New Social</a
                >
                <a href="/edit-social/<%= data.id %>" class="btn btn-sm btn-info"
                  ><i class="fas fa-edit"></i> Edit</a
                >
                <a href="/social" class="btn btn-sm btn-warning"
                  ><i class="fas fa-list"></i> All Social List</a
                >
              </div>
            </div>

            <div class="col-12 col-md-12 col-lg-6">
              <div class="post-img">
                <% var imgName='/assets/upload/' + data.img %>
                <img
                  src="<%= imgName %>"
                  alt="<%= data.title %>"
                  class="img-fluid"
                />
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </section>
    <!-- /.content -->
    <% }else{ %>
    <h3>Data empty</h3>
    <% } %>
  </div>
</div>

<%- include('../../partials/footer') %>
