<%- include('../../partials/header', {title: "Add Testimonial" }) %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('../../partials/breadcream', {title:"Add Testimonial", parent:"testimonial"}) %>

      <!-- Main content -->
      <section class="content">
        <% if(locals.message) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>
              <%= message %>
            </strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% } %>
          
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-8">
              <form action="/add-testimonial" method="post" enctype="multipart/form-data">
                <!-- <input type="text"> -->
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter Name" />
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="exampleInputFile">Image Upload</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" id="exampleInputFile" name="img" />
                            <label class="custom-file-label" for="exampleInputFile">Choose Image</label>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" name="city" placeholder="Enter City" />
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label>Description</label>
                    <textarea id="summernote" name="desc"></textarea>
                  </div>

                  <div class="form-group">
                    <label>Client Review</label>
                    <textarea id="summernote2" name="text"></textarea>
                  </div>

                  <div class="row">
                    <div class="col-md-9">
                      <div class="form-group">
                        <label>Client Review Video</label>
                        <input type="text" class="form-control" name="video" placeholder="Enter Video" />
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" name="status">
                          <option value="success">Success</option>
                          <option value="pending" selected>Pending</option>
                          <option value="reject">Reject</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>

            <div class="col-md-4"></div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
  </div>
  </div>

  <%- include('../../partials/footer') %>
    <script>
      $(function () {
        // Summernote
        $("#summernote").summernote({
          height: 150,
        });
        $("#summernote2").summernote({
          height: 250,
        });
      });

      $(function () {
        bsCustomFileInput.init();
      });
    </script>